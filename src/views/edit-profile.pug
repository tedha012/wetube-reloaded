extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar", accept="image/*")
        input(placeholder="Name", type="text", name="name", value=loggedInUser.name, required)
        input(placeholder="Email", type="text", name="email", value=loggedInUser.email, required)
        input(placeholder="Username", type="text", name="username", value=loggedInUser.username, required)
        input(placeholder="Location", type="text", name="location", value=loggedInUser.location, required)
        input(type="submit" value="Update Profile")
        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr;