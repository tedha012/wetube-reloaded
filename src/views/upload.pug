extends base.pug

block content
    div
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file" id="video" name="video", accept="video/*", required)
        label(for="thumb") Thumbnail File
        input(type="file" id="thumb" name="thumb", accept="image/*", required)
        input(type="text", name="title", placeholder="Video Title", required, maxlength=80)
        input(type="text", name="description", placeholder="Description", required, minlength=20)
        input(type="text", name="hashtags", placeholder="Hashtags, sperated by comma.", required)
        input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js")